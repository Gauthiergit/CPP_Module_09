# Program name
NAME    	= PmergeMe

# Compiler options
CXX     = c++ 
CFLAGS  = -Wall -Wextra -Werror -std=c++98 -g

DIR_OBJ = obj/

# Colors
RESET_COLOR = \033[0m
BOLD = \033[1m
GREEN = \033[92m
BLUE = \033[94m

SRCS  = main.cpp \
		PmergeMe.cpp

OBJ = $(patsubst %.cpp,$(DIR_OBJ)%.o,$(SRCS))


# Compiling project
$(NAME): $(OBJ)
		@echo "$(BOLD)$(BLUE)ğŸ› ï¸ ğŸš§     Compiling project...     ğŸš§ğŸ› ï¸$(RESET_COLOR)"
		@echo "\n"
		@$(CXX) $(CFLAGS) -o $(NAME) $(OBJ)
		@echo "$(BOLD)$(GREEN)ğŸ§‘â€ğŸ’»   PmergeMe ready to use   ğŸ§‘â€ğŸ’»$(RESET_COLOR)"

$(DIR_OBJ):
	@mkdir -p $(DIR_OBJ)

$(DIR_OBJ)%.o: %.cpp | $(DIR_OBJ)
	@$(CXX) $(CFLAGS) -c $< -o $@

all: $(NAME)

clean:
		@echo "$(BOLD)$(BLUE)ğŸ§¹ğŸ§¼     Cleaning .o ...     ğŸ§¼ğŸ§¹$(RESET_COLOR)"
		@rm -rf $(DIR_OBJ)

fclean: clean
		@rm -rf $(NAME)
		@echo "\n"
		@echo "$(BOLD)$(GREEN)ğŸ§¹ğŸ§¼     Cleaning finished     ğŸ§¼ğŸ§¹$(RESET_COLOR)"

re: fclean all

.PHONY: all clean fclean re