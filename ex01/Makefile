# Program name
NAME    	= RPN

# Compiler options
CXX     = c++ 
CFLAGS  = -Wall -Wextra -Werror -std=c++98 -g

DIR_OBJ = obj/

# Colors
RESET_COLOR = \033[0m
BOLD = \033[1m
GREEN = \033[92m
BLUE = \033[94m

SRCS  = main.cpp \
		RPN.cpp

OBJ = $(patsubst %.cpp,$(DIR_OBJ)%.o,$(SRCS))


# Compiling project
$(NAME): $(OBJ)
		@echo "$(BOLD)$(BLUE)๐๏ธ ๐ง     Compiling project...     ๐ง๐๏ธ$(RESET_COLOR)"
		@echo "\n"
		@$(CXX) $(CFLAGS) -o $(NAME) $(OBJ)
		@echo "$(BOLD)$(GREEN)๐งโ๐ป   RPN ready to use   ๐งโ๐ป$(RESET_COLOR)"

$(DIR_OBJ):
	@mkdir -p $(DIR_OBJ)

$(DIR_OBJ)%.o: %.cpp | $(DIR_OBJ)
	@$(CXX) $(CFLAGS) -c $< -o $@

all: $(NAME)

clean:
		@echo "$(BOLD)$(BLUE)๐งน๐งผ     Cleaning .o ...     ๐งผ๐งน$(RESET_COLOR)"
		@rm -rf $(DIR_OBJ)

fclean: clean
		@rm -rf $(NAME)
		@echo "\n"
		@echo "$(BOLD)$(GREEN)๐งน๐งผ     Cleaning finished     ๐งผ๐งน$(RESET_COLOR)"

re: fclean all

.PHONY: all clean fclean re